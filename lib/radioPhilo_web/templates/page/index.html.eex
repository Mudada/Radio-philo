<h2>
    Radio Philo Quotation
</h2>
<div id="chat-box">
    <%= for message <- @messages do %>
        <p>
            <b><%= message.name %>:</b>
            <%= message.body %>
        </p>
    <% end %>
</div>

<form id="chat-form">
    <%= select(:quotation, :type, ["CITATION": 1, "VIEWER": 2]) %>
    <%= textarea(:quotation, :content) %>
    <button type="submit">Post</button>
</form>
